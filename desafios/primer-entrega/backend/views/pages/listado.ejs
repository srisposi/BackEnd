<%- include("./partials/head.ejs") %>
<%- include("./partials/header.ejs") %>

<style>
    .table td, .table th {
        vertical-align: middle;
    }
    h1 {
        color: blue;
    }
    hr {
        background-color: #ddd;
    }
    .jumbotron {
        min-height: 100vh;
    }
</style>

<div class="jumbotron">
    <h1 class="text-center">Lista de Productos</h1>
    <br>

    <% if (existenProductos) { %>
        <div class="table-responsive">
            <table class="table table-dark">
                <tr> <th>Nombre</th> <th>Precio</th> <th>Imagen</th></tr>
                <% productos.forEach(function(producto){ %>
                    <tr> <td><%=producto.title%></td> <td><%=producto.price%></td> <td><img width="50" src='<%=producto.thumbnail%>' alt="not found"></td> </tr>
                <% }) %>
            </table>
        </div>
    <%} else { %>
        <h3 class="alert alert-warning">No se encontraron productos</h3>
    <% } %>
      <a href="/"><button class="btn btn-success">Ir a cargar Productos</button></a>
</div>

<%- include("./partials/footer.ejs") %>
<%- include("./partials/scripts.ejs") %>