extends layout.pug

block formulario
    h1.text-center.text-dark Formulario de carga de productos
    form.p-2(action='/productos/' method='POST')
        .form-group.p-2
            label.text-light(for='exampleInputEmail1') Nombre
            input.form-control(type='text' name='title' placeholder='Ingresar nombre')
        .form-group.p-2
            label.text-light(for='exampleInputEmail1') Precio
            input.form-control(type='text' name='price' placeholder='Ingresar precio')
        .form-group.p-2
            label.text-light(for='exampleInputEmail1') Foto
            input.form-control(type='file' name='thumbnail' placeholder='Ingresar thumbnail' id="inputGroupFile01" aria-describedby="inputGroupFileAddon01")

        button.btn.btn-primary.text-center.m-2 Enviar
        br
        hr
    a(href="/productos")
            button.btn.btn-success Ir a listado de productos

